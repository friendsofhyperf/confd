{
    "name": "friendsofhyperf/confd",
    "description": "The confd component for Hyperf.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "hyperf/command": "~3.0.0",
        "hyperf/config-center": "~3.0.0",
        "hyperf/di": "~3.0.0",
        "hyperf/etcd": "~3.0.0",
        "hyperf/event": "~3.0.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/utils": "~3.0.0"
    },
    "require-dev": {
        "laravel/pint": "^0.2.1"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\Confd\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "hyperf": {
            "config": "FriendsOfHyperf\\Confd\\ConfigProvider"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 512M -l 0 -c phpstan.neon ./src",
        "pint": "./vendor/bin/pint",
        "pint-test": "./vendor/bin/pint --test"
    }
}